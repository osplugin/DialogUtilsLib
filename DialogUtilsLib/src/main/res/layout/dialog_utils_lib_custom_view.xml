<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="title"
            type="String" />

        <variable
            name="okDesc"
            type="String" />

        <variable
            name="cancelDesc"
            type="String" />

        <variable
            name="noShowOk"
            type="Boolean" />

        <variable
            name="noShowCancel"
            type="Boolean" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_utils_lib_bg_white_circle"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@{title}"
            android:textColor="@color/dialog_utils_lib_title_fg"
            android:textSize="@dimen/dialog_utils_lib_title_text_size" />

        <RelativeLayout
            android:id="@+id/contentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@{noShowCancel ? @drawable/dialog_utils_lib_ok_button_double : @drawable/dialog_utils_lib_ok_button}"
                android:gravity="center"
                android:onClick="@{click::onClick}"
                android:padding="10dp"
                android:text="@{okDesc}"
                android:textColor="@color/dialog_utils_lib_ok_fg"
                android:textSize="@dimen/dialog_utils_lib_ok_text_size"
                android:visibility="@{!noShowOk ? View.VISIBLE : View.GONE}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dialog_utils_lib_button_split_bg"
                android:visibility="@{(!noShowCancel &amp;&amp; !noShowOk) ? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@{noShowOk ? @drawable/dialog_utils_lib_cancel_button_double : @drawable/dialog_utils_lib_cancel_button}"
                android:gravity="center"
                android:onClick="@{click::onClick}"
                android:padding="10dp"
                android:text="@{cancelDesc}"
                android:textColor="@color/dialog_utils_lib_cancel_fg"
                android:textSize="@dimen/dialog_utils_lib_cancel_text_size"
                android:visibility="@{!noShowCancel ? View.VISIBLE : View.GONE}" />

        </LinearLayout>

    </LinearLayout>
</layout>