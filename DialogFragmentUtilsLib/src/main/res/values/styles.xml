<resources>

    <style name="DialogLibUtilsDialogStyle" parent="android:Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 背景透明 #00000000 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogLibUtilsDialogLoadingStyle" parent="DialogLibUtilsDialogStyle">
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Dialog">
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 全屏窗口 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 透明背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 无边框 -->
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>
